单一Master多Slave
	sed -i '$a \[mysqld\]\nserver_id=1\nlog-bin=mysql-bin' /etc/mysql/conf.d/mysql.cnf 

	sed -i '$a \[mysqld\]\nserver_id=2\nlog-bin=mysql-bin\nrelay_log=mysql-relay-bin\nlog_slave_updates\nread_only=1' /etc/mysql/conf.d/mysql.cnf

主动 Master - Master

	172.17.70.147
	
	docker run :
		docker run --name mysql_master_a1 -d -p 3306:3306 -v ~/data/mysql_data/:/mysql_data/ --restart=always -e MYSQL_ROOT_PASSWORD=root hub.c.163.com/library/mysql

		docker run --name mysql_master_a2 -d -p 3307:3306 -v ~/data/mysql_data/:/mysql_data/ --restart=always --link mysql_master_a1:mysql_master_a1 -e MYSQL_ROOT_PASSWORD=root hub.c.163.com/library/mysql

	sed :
		sed -i '$a \[mysqld\]\nserver-id=\nlog-bin=mysql-bin\nrelay_log=mysql-real-bin\nlog_slave_updates\nauto-increment-offset=1\nauto_increment_increment=2\nslave-skip-errors=all\nsync_binlog=1\n' /etc/mysql/conf.d/mysql.cnf

		sed -i '$a \[mysqld\]\nserver-id=1\nlog-bin=mysql-bin\nrelay_log=mysql-real-bin\nlog_slave_updates\nauto-increment-offset=1\nauto_increment_increment=2\nslave-skip-errors=all\nsync_binlog=1\n' /etc/mysql/conf.d/mysql.cnf

		sed -i '$a \[mysqld\]\nserver-id=2\nlog-bin=mysql-bin\nrelay_log=mysql-real-bin\nlog_slave_updates\nauto-increment-offset=2\nauto_increment_increment=2\nslave-skip-errors=all\nsync_binlog=1\n' /etc/mysql/conf.d/mysql.cnf

	mysql : 
		change master to master_host="172.17.70.147",master_user="root",master_password="root",master_port=3306,MASTER_LOG_FILE='mysql-bin.000001',MASTER_LOG_POS=0;

		change master to master_host="172.17.70.147",master_user="root",master_password="root",master_port=3307,MASTER_LOG_FILE='mysql-bin.000001',MASTER_LOG_POS=0;